@using Frontend.Components.Base
@using Frontend.Components.Validation
@using Shared.Models.Entities
@using Frontend.Modules.Inventario.Core
@inherits ComponentBase

<EssentialsCard Title="Nuevo Marca" 
               Icon="add" 
               IconColor="#0078d4">
    <ChildContent>
        <FormValidator Entity="entity" Rules="@GetValidationRules()">
            <RadzenStack Gap="1rem">
                <ValidatedInput FieldName="Nombre" Value="@entity.Nombre">
    <RadzenFormField Text="Nombre">
        <RadzenTextBox @oninput="@(v => entity.Nombre = v.Value?.ToString())" 
                       Value="@entity.Nombre"
                       Placeholder="Ingrese nombre" />
    </RadzenFormField>
</ValidatedInput>
                <ValidatedInput FieldName="Descripcion" Value="@entity.Descripcion">
    <RadzenFormField Text="Descripci贸n">
        <RadzenTextArea @oninput="@(v => entity.Descripcion = v.Value?.ToString())" 
                        Value="@entity.Descripcion"
                        Placeholder="Ingrese descripci贸n (opcional)" 
                        Rows="3" />
    </RadzenFormField>
</ValidatedInput>
                <ValidatedInput FieldName="CodigoInterno" Value="@entity.CodigoInterno">
    <RadzenFormField Text="C贸digo Interno">
        <RadzenTextBox @oninput="@(v => entity.CodigoInterno = v.Value?.ToString())" 
                       Value="@entity.CodigoInterno"
                       Placeholder="Ingrese c贸digo interno" />
    </RadzenFormField>
</ValidatedInput>
                
            </RadzenStack>
        </FormValidator>
        
        <div class="mt-3">
            <RadzenButton Text="Crear Marca" 
                          Icon="save" 
                          ButtonStyle="ButtonStyle.Primary"
                          Click="@SaveEntity" 
                          IsBusy="@isLoading" />
            <RadzenButton Text="Cancelar" 
                          Icon="cancel" 
                          ButtonStyle="ButtonStyle.Light"
                          Click="@Cancel" 
                          class="ms-2" />
        </div>
        
    </ChildContent>
</EssentialsCard>

<style>
    .fast-form {
        max-width: 500px;
        margin: 0 auto;
    }
</style>
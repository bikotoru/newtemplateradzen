@using Frontend.Components.Base
@using Frontend.Components.Validation
@using Shared.Models.Entities
@using Frontend.Modules.Categoria
@inherits ComponentBase

<EssentialsCard Title="Nueva Categoría" 
               Icon="add" 
               IconColor="#0078d4">
    <ChildContent>
        <FormValidator Entity="entity" Rules="@GetValidationRules()">
            <RadzenStack Gap="1rem">
                
                <ValidatedInput FieldName="Nombre" Value="@entity.Nombre">
                    <RadzenFormField Text="Nombre">
                        <RadzenTextBox @oninput="@(v => entity.Nombre = v.Value?.ToString())" 
                                       Value="@entity.Nombre"
                                       Placeholder="Ingrese el nombre de la categoría" />
                    </RadzenFormField>
                </ValidatedInput>
                
                <ValidatedInput FieldName="Descripcion" Value="@entity.Descripcion">
                    <RadzenFormField Text="Descripción">
                        <RadzenTextArea @oninput="@(v => entity.Descripcion = v.Value?.ToString())" 
                                        Value="@entity.Descripcion"
                                        Placeholder="Ingrese la descripción (opcional)" 
                                        Rows="3" />
                    </RadzenFormField>
                </ValidatedInput>
                
                <RadzenFormField Text="Activo">
                    <RadzenCheckBox @bind-Value="entity.Active" />
                </RadzenFormField>
                
            </RadzenStack>
        </FormValidator>
        
        <div class="mt-3">
            <RadzenButton Text="Crear Categoría" 
                          Icon="save" 
                          ButtonStyle="ButtonStyle.Primary"
                          Click="@SaveEntity" 
                          IsBusy="@isLoading" />
            <RadzenButton Text="Cancelar" 
                          Icon="cancel" 
                          ButtonStyle="ButtonStyle.Light"
                          Click="@Cancel" 
                          class="ms-2" />
        </div>
        
    </ChildContent>
</EssentialsCard>

<style>
    .fast-form {
        max-width: 500px;
        margin: 0 auto;
    }
</style>
@using Frontend.Components.Base
@using Frontend.Components.Validation
@using Shared.Models.Entities
@using Frontend.Modules.Ventas
@inherits ComponentBase

<EssentialsCard Title="Nuevo Venta" 
               Icon="add" 
               IconColor="#0078d4">
    <ChildContent>
        <FormValidator Entity="entity" Rules="@GetValidationRules()">
            <RadzenStack Gap="1rem">
                <ValidatedInput FieldName="Numventa" Value="@entity.Numventa">
    <RadzenFormField Text="Numventa">
        <RadzenNumeric @bind-Value="entity.Numventa" 
                       Placeholder="0"
                       
                       ShowUpDown="false" />
    </RadzenFormField>
</ValidatedInput>
                <ValidatedInput FieldName="Montototal" Value="@entity.Montototal">
    <RadzenFormField Text="Montototal">
        <RadzenNumeric @bind-Value="entity.Montototal" 
                       Placeholder="0"
                       
                       ShowUpDown="false" />
    </RadzenFormField>
</ValidatedInput>
                
            </RadzenStack>
        </FormValidator>
        
        <div class="mt-3">
            <RadzenButton Text="Crear Venta" 
                          Icon="save" 
                          ButtonStyle="ButtonStyle.Primary"
                          Click="@SaveEntity" 
                          IsBusy="@isLoading" />
            <RadzenButton Text="Cancelar" 
                          Icon="cancel" 
                          ButtonStyle="ButtonStyle.Light"
                          Click="@Cancel" 
                          class="ms-2" />
        </div>
        
    </ChildContent>
</EssentialsCard>

<style>
    .fast-form {
        max-width: 500px;
        margin: 0 auto;
    }
</style>